{
  "name": "esm-pathnames",
  "version": "1.0.1",
  "description": "You can use __dirname and __filename when using ESM",
  "main": "/build/index.js",
  "files": [
    "./build/*"
  ],
  "types": "./build/index.d.ts",
  "scripts": {
    "swc-build": "swc ./src -d build",
    "emit-declaration": "tsc",
    "build": "rm -rf ./build && yarn swc-build && yarn emit-declaration"
  },
  "keywords": [
    "__filename",
    "__dirname",
    "filename",
    "dirname",
    "commonjs",
    "ecmascript",
    "export",
    "import",
    "modules",
    "node",
    "require"
  ],
  "author": {
    "name": "Youngjae Joo",
    "email": "bityoungjae@gmail.com",
    "url": "https://bityoungjae.com"
  },
  "engines": {
    "node": ">=12.14.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BitYoungjae/esm-pathnames.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@swc/cli": "^0.1.51",
    "@swc/core": "^1.2.102",
    "@types/node": "^16.11.4",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4"
  }
}
